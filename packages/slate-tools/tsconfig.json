{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist/",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "typeRoots": [ "./node_modules/@types", "./../../node_modules/@types" ],
    "jsx": "react",
    "allowJs": true
  },
  "include": [ "src/**/*" ],
  "exclude": ["node_modules"]
}