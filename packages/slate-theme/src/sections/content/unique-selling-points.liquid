{%- comment -%}
  Page Unique Selling Points
   
  Version:
    1.0.0 - 2021/05/07
{%- endcomment -%}
{% capture blocks %}
  {% for block in section.blocks %}
    {%- liquid
      if block.settings.icon == blank or block.settings.title == blank
        continue
      endif
    -%}

    <div class="c-usps__usp">
      <div class="c-usps__usp-icon">{{ block.settings.icon }}</div>
      <p class="o-heading--6 c-usps__usp-text">
        {{- block.settings.title | escape -}}
      </p>
    </div>
  {% endfor %}
{% endcapture %}

{% if blocks != blank %}
  <div class="c-usps">
    <div class="c-usps__inner">
      {{- blocks -}}
    </div>
  </div>
{% endif %}


{% schema %}
  {  
    "name": "Unique Selling Points",
    "class": "c-section c-section__usp",
    "settings": [],
    "blocks": [
      {
        "type": "unique_selling_point",
        "name": "Unique Selling Point",
        "settings": [
          {
            "type": "text",
            "id": "icon",
            "label": "SVG Icon",
            "info": "Copy/paste svg code here"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Unique Selling Points",
        "category": "Content"
      }
    ]
  }
{% endschema %}